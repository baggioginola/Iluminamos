{% extends "layout/master.twig" %}

{% block title %}Producto{% endblock %}

{% block head %}
    {{ parent() }}

{% endblock %}
{% block body_id %}productOverview{% endblock %}
{% block content %}
    <div class="container-fluid wide-content">
        <div class="container" id="breadcrumb">
            <ol>
                <li><a href="{{ settings.DOMAIN }}">Inicio</a></li>
                <li>&gt;</li>
                <li><a href="{{ settings.DOMAIN }}categoria/{{ result.id_categoria }}">{{ result.categoria | convert_encoding('UTF-8', 'ISO-8859-1') }}</a></li>
                <li>&gt;</li>
                <li><span class="active-page">{{ result.nombre | convert_encoding('UTF-8', 'ISO-8859-1') }}</span></li>
            </ol>
        </div> <!-- end breadcrumb -->


        <!-- page title -->
        <div class="container pageTitle">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h1>{{ result.nombre | convert_encoding('UTF-8', 'ISO-8859-1') }}</h1>
                </div>
            </div>    <!-- /row -->
        </div>    <!-- /container -->

        <!-- section 1 -->
        <div id="section_1">

            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                        <!-- Tab panes -->
                        <div class="tab-content">

                            <div class="tab-pane active">
                                <div class="row">

                                    <!-- column left !-->
                                    <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 results-col">
                                        <div class="row">

                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                <!-- item news-events -->

                                                <!-- descktop content -->
                                                <div class="item-highlights-new">
                                                    <a href="#">
                                                        <div>
                                                            <img class="img-responsive center-block"
                                                                 src="{{ settings.PRODUCT_IMG }}{{ result.id_producto }}.jpg"
                                                                 alt=""
                                                                 title="">
                                                        </div>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>    <!-- /column right results -->

                                    <!-- column right results -->
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <h1 class="">$ {{ result.precio }}</h1>
                                            <div class="product_detail">
                                                <h3>Detalles</h3>
                                                <div>
                                                    <span>
                                                        <b>Categoría:</b> {{ result.categoria }}
                                                        <br>
                                                        <b>Marca:</b> {{ result.marca }}
                                                        <br>
                                                        <b>Descripción</b>
                                                        <br>
                                                        {% autoescape %}
                                                            {{ result.descripcion | raw }}
                                                        {% endautoescape %}
                                                        <br>
                                                        <b>Detalles Técnicos</b>
                                                        {% autoescape %}
                                                            {{ result.detalles_tecnicos | raw}}
                                                        {% endautoescape %}
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>    <!-- /column left selectors -->
                                </div>    <!-- /row -->

                            </div>


                        </div>
                    </div>
                </div>    <!-- /row -->
            </div>    <!-- /container -->

        </div>    <!-- /.text -->
    </div>
{% endblock %}