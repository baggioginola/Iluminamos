{% extends "layout/master.twig" %}

{% block title %}Proyectos{% endblock %}

{% block head %}
    {{ parent() }}
    <script type="text/javascript" src="{{ settings.JS }}fancybox.js"></script>
    <script type="text/javascript" src="{{ settings.JS }}custom/projects.js"></script>
    <link rel="stylesheet" href="http://fancybox.net/js/fancybox-1.3.4/jquery.fancybox-1.3.4.css" type="text/css"
          media="screen"/>
{% endblock %}
{% block body_id %}productOverview{% endblock %}
{% block content %}
    <div class="container-fluid wide-content">
        <div class="container" id="breadcrumb">
            <ol>
                <li><a href="/ledsc4/es.html">Inicio</a></li>
                <li>&gt;</li>
                <li><span class="active-page">Proyectos</span></li>
            </ol>
        </div>

        <div class="container pageTitle">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h1>PROYECTOS</h1>
                </div>
            </div>
        </div>
        <div id="section_1">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="tab-content">
                            <div class="tab-pane active">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 results-col">
                                        <div class="row highlights-new">
                                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                <div>
                                                    <div>
                                                        <img class="img-responsive center-block"
                                                             src="{{ settings.IMG }}proyectos/1.png"
                                                             alt=""
                                                             title="">
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                                            <div class="project_detail">
                                                <p>
                                                    Atendemos a instituciones públicas y privadas, como lo son Casas
                                                    Habitación, Hoteles, Restaurantes, Universidades, Parques
                                                    Industriales, entre muchos otros.
                                                </p>
                                                Cumplimos siempre con responsabilidad y profesionalismo en cada uno de
                                                nuestros proyectos.
                                                <p>
                                                    Proyectos de iluminación profesionales de acuerdo a las Normas
                                                    Mexicanas, que incluyen:
                                                </p>

                                                <ul>
                                                    <li>Levantamiento</li>
                                                    <li>Diagnóstico</li>
                                                    <li>Ubicación</li>
                                                    <li>Concepto</li>
                                                    <li>Ante proyecto</li>
                                                    <li>Proyecto Ejecutivo</li>
                                                    <li>Supervisión</li>
                                                </ul>
                                                <p>
                                                    Proyectos de control de iluminación (Manuales o Automatizados).
                                                </p>

                                                <p>
                                                    Venta de equipo de automatización
                                                </p>

                                                <p>
                                                    Suministro de luminarias, lámparas, balastros y control de
                                                    iluminación.
                                                </p>

                                                <p>
                                                    Asesoría profesional y propuestas de iluminación.
                                                </p>

                                                <p>
                                                    Financiamiento en proyectos de luminarios SSL (Led), por medio de
                                                    FIDE.
                                                </p>

                                                <p>
                                                    Asesoría profesional en propuestas de iluminación
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <!--- -------------------------------------  Projects   ------------------------------ !-->

                                </div>
                                {% for proyecto  in result %}
                                    <div class="row">
                                        <div class="thumbnail"
                                             style="overflow: auto; padding-top: 15px; margin-left: 10px; margin-right: 10px;">
                                            <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 results-col">
                                                <div class="row highlights-new">
                                                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                        <div>
                                                            <a href="javascript:;" class="projects"
                                                               id="{{ proyecto.id_caso_exito }}">
                                                                <div>
                                                                    <img class="img-responsive center-block"
                                                                         src="{{ settings.PROJECT_IMG }}/{{ proyecto.id_caso_exito }}.jpg"
                                                                         alt=""
                                                                         title="">
                                                                </div>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                    <h1 style="margin-top: 2px;">{{ proyecto.titulo | convert_encoding('UTF-8', 'ISO-8859-1') }}</h1>

                                                    <div class="project_detail">
                                                        <h3>{{ proyecto.subtitulo | convert_encoding('UTF-8', 'ISO-8859-1') }}</h3>
                                                        <br>
                                                        {% autoescape %}
                                                        {{ proyecto.contenido | raw }}
                                                        {% endautoescape %}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}