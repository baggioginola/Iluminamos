{% extends "layout/master.twig" %}

{% block title %}Producto{% endblock %}

{% block head %}
    {{ parent() }}

{% endblock %}
{% block body_id %}productOverview{% endblock %}
{% block content %}
    <div class="container-fluid wide-content">
        <div class="container" id="breadcrumb">
            <ol>
                <li><a href="{{ settings.DOMAIN }}">Inicio</a></li>
                <li>&gt;</li>
                <li>
                    <a href="{{ settings.DOMAIN }}categoria/{{ result.id_categoria }}">{{ result.categoria | convert_encoding('UTF-8', 'ISO-8859-1') }}</a>
                </li>
                <li>&gt;</li>
                <li><span class="active-page">{{ result.nombre | convert_encoding('UTF-8', 'ISO-8859-1') }}</span></li>
            </ol>
        </div> <!-- end breadcrumb -->

        <div id="section_1">

            <div class="container">
                <div class="row product">
                    <div class="col-md-5 col-md-offset-0"><img class="img-responsive" src="{{ settings.PRODUCT_IMG }}{{ result.id_producto }}.jpg"/></div>
                    <div class="col-md-7">
                        <h2>{{ result.nombre | convert_encoding('UTF-8', 'ISO-8859-1') }}</h2>
                        <p>{% autoescape %}
                                {{ result.descripcion | raw }}
                            {% endautoescape %}
                        </p>
                        <h3>${{ result.precio }}</h3>
                        <button class="btn btn-primary" type="button">Agregar al carrito</button>
                    </div>
                </div>
                <div class="page-header">
                    <h3>Detalles TÃ©cnicos</h3></div>
                <p>{% autoescape %}
                        {{ result.detalles_tecnicos | raw}}
                    {% endautoescape %}
                </p>


            </div>

        </div>    <!-- /.text -->
    </div>
{% endblock %}